<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeCardTitleTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/img_card_title_bg</item>
        <item name="android:drawableLeft">@drawable/shape_home_card_title_drawable</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
